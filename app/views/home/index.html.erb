 <div class="hero-section">
    <h1>NUVEXA</h1>
    <p>Your one-stop destination for all your eCommerce needs</p>
    <%= link_to "Shop Now", products_path, class: "btn-primary-custom" %>
  </div>

  <div class="features-section">
    <div class="feature">
      <h3>Top Products</h3>
      <p>Browse our top-rated products and find the best deals</p>
    </div>
    <div class="feature">
      <h3>Fast Shipping</h3>
      <p>Enjoy quick and reliable shipping to your doorstep</p>
    </div>
    <div class="feature">
      <h3>24/7 Support</h3>
      <p>Get assistance anytime with our 24/7 customer support team</p>
    </div>
  </div>
   <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
    }

    .hero-section {
      background-color: #007bff;
      color: white;
      padding: 80px 20px;
      text-align: center;
    }

    .hero-section h1 {
      font-size: 3em;
      margin-bottom: 20px;
    }

    .hero-section p {
      font-size: 1.2em;
      margin-bottom: 30px;
    }

    .btn-primary-custom {
      background-color: #28a745;
      color: white;
      border: none;
      padding: 15px 25px;
      font-size: 1.1em;
      cursor: pointer;
      border-radius: 5px;
    }

    .btn-primary-custom:hover {
      background-color: #218838;
    }

    .features-section {
      display: flex;
      justify-content: space-around;
      padding: 50px 20px;
    }

    .feature {
      background-color: white;
      padding: 30px;
      text-align: center;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      width: 30%;
    }

    .feature h3 {
      margin-bottom: 20px;
      color: #007bff;
    }

    .feature p {
      color: #555;
    }
  </style>