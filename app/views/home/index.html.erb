   <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
    }

    .hero-section {
      background-color: #424242;
      color: white;
      padding: 80px 20px;
      text-align: center;
    }

    .hero-section h1 {
      font-size: 3em;
      margin-bottom: 20px;
    }

    .hero-section p {
      font-size: 1.2em;
      margin-bottom: 30px;
    }

    .btn-primary-custom {
      background-color: #a9822d;
      color: white;
      border: none;
      padding: 15px 25px;
      font-size: 1.1em;
      cursor: pointer;
      border-radius: 5px;
    }

    .btn-primary-custom:hover {
      background-color: #cb9500;
    }

    .features-section {
      display: flex;
      justify-content: space-around;
      padding: 50px 20px;
    }

    .feature {
      background-color: white;
      padding: 30px;
      text-align: center;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      width: 30%;
    }

    .feature h3 {
      margin-bottom: 20px;
      color: #1f1f1f;
    }

    .feature p {
      color: #555;
    }
  </style>

