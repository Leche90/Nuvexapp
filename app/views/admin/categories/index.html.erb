<h3></h3>

<%= link_to 'Add New Category', new_admin_category_path, class: 'btn btn-primary' %>

<table class="table mt-3">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-warning btn-sm' %>
        <%= link_to 'Delete', admin_category_path(category), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: 'btn btn-danger btn-sm' %>
 </td>
      </tr>
    <% end %>
  </tbody>
</table>
