<div class="container mt-5">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Province</th>
        <th>Code</th>
        <th>GST</th>
        <th>PST</th>
        <th>HST</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @provinces.each do |province| %>
        <tr>
          <td><%= province.name %></td>
          <td><%= province.code %></td>
          <td><%= number_to_percentage(province.gst * 100, precision: 2) %></td>
          <td><%= number_to_percentage(province.pst * 100, precision: 2) %></td>
          <td><%= number_to_percentage(province.hst * 100, precision: 2) %></td>
          <td>
            <%= link_to 'Edit', edit_admin_province_path(province), class: "btn btn-sm btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
