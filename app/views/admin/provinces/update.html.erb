<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h3>Update Tax Rates for <%= @province.name %></h3>
        </div>
        <div class="card-body">
          <%= form_with(model: [:admin, @province], local: true) do |form| %>
            <div class="form-group mb-3">
              <%= form.label :gst, "GST Rate (%)", class: "form-label" %>
              <%= form.number_field :gst, step: 0.01, class: "form-control", required: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :pst, "PST Rate (%)", class: "form-label" %>
              <%= form.number_field :pst, step: 0.01, class: "form-control", required: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :hst, "HST Rate (%)", class: "form-label" %>
              <%= form.number_field :hst, step: 0.01, class: "form-control", required: true %>
            </div>

            <div class="form-group d-flex justify-content-between mt-4">
              <%= link_to "Cancel", admin_provinces_path, class: "btn btn-secondary" %>
              <%= form.submit "Save Changes", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
