<div class="container mt-3">
  <h3 class="display-22 text-left mb-4">Edit Tax Rates for <%= @province.name %></h3>

  <%= form_with model: [:admin, @province], local: true do |f| %>
    <div class="form-group">
      <%= f.label :gst, "GST (%)", class: "form-label" %>
      <%= f.number_field :gst, step: 0.0001, class: "form-control", placeholder: "Enter GST rate" %>
    </div>

    <div class="form-group">
      <%= f.label :pst, "PST (%)", class: "form-label" %>
      <%= f.number_field :pst, step: 0.0001, class: "form-control", placeholder: "Enter PST rate" %>
    </div>

    <div class="form-group">
      <%= f.label :hst, "HST (%)", class: "form-label" %>
      <%= f.number_field :hst, step: 0.0001, class: "form-control", placeholder: "Enter HST rate" %>
    </div>

    <div class="form-group mt-4">
      <%= f.submit "Update Tax Rates", class: "btn btn-success" %>
      <%= link_to 'Back', admin_provinces_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
